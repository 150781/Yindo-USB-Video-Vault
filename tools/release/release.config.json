{
  "project": {
    "name": "USB Video Vault",
    "repository": "https://github.com/user/USB-Video-Vault",
    "branches": {
      "production": "main",
      "development": "develop",
      "hotfix": "hotfix/*",
      "feature": "feature/*",
      "release": "release/*"
    }
  },
  "versioning": {
    "strategy": "semver",
    "prerelease": {
      "alpha": "alpha",
      "beta": "beta",
      "rc": "rc"
    },
    "buildMetadata": true
  },
  "signing": {
    "enabled": true,
    "certificate": "certificates/usb-video-vault.p12",
    "timestampServer": "http://timestamp.digicert.com",
    "algorithm": "SHA256"
  },
  "distribution": {
    "github": {
      "enabled": true,
      "createRelease": true,
      "uploadArtifacts": true,
      "generateNotes": true
    },
    "winget": {
      "enabled": true,
      "manifestPath": "tools/packaging/winget/",
      "autoSubmit": false
    },
    "chocolatey": {
      "enabled": true,
      "packagePath": "tools/packaging/chocolatey/",
      "autoSubmit": false
    },
    "autoUpdate": {
      "enabled": true,
      "serverUrl": "https://updates.usbvideovault.example"
    }
  },
  "testing": {
    "preRelease": {
      "unitTests": true,
      "integrationTests": true,
      "e2eTests": true,
      "securityAudit": true,
      "performanceTests": false
    },
    "postRelease": {
      "smokeTests": true,
      "monitoring": true,
      "rollbackPlan": true
    }
  },
  "monitoring": {
    "enabled": true,
    "postReleaseDuration": 48,
    "webhooks": {
      "slack": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "teams": "",
      "discord": ""
    },
    "errorTracking": {
      "service": "sentry",
      "dsn": "https://your-sentry-dsn.ingest.sentry.io"
    },
    "analytics": {
      "service": "google-analytics",
      "trackingId": "GA-XXXXXXXX-X"
    }
  },
  "changelog": {
    "enabled": true,
    "format": "keepachangelog",
    "sections": [
      "Added",
      "Changed",
      "Deprecated",
      "Removed",
      "Fixed",
      "Security"
    ],
    "includeCommits": true,
    "generateAutomatically": true
  },
  "artifacts": {
    "retention": {
      "releases": 10,
      "prereleases": 5,
      "builds": 20
    },
    "checksums": {
      "sha256": true,
      "sha512": true,
      "gpgSign": false
    },
    "sbom": {
      "generate": true,
      "format": "cyclonedx-json",
      "includeDevDependencies": false
    }
  },
  "rollback": {
    "enabled": true,
    "automaticTriggers": {
      "errorRate": 5.0,
      "crashRate": 2.0,
      "monitoringWindow": 30
    },
    "approvalRequired": true,
    "notificationChannels": [
      "slack",
      "email"
    ]
  },
  "environments": {
    "development": {
      "autoUpdate": false,
      "telemetry": false,
      "debugging": true
    },
    "staging": {
      "autoUpdate": true,
      "telemetry": true,
      "debugging": true
    },
    "production": {
      "autoUpdate": true,
      "telemetry": true,
      "debugging": false
    }
  }
}
