{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2022",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "node",
      "react",
      "react-dom"
    ],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/renderer",
    "src/types",
    "src/main",
    "src/shared",
    "test/**/*.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.mjs",
    "**/*.js"
  ]
}
