{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "electron"],
    "resolveJsonModule": true
  },
  "include": ["src/main/**/*.ts", "src/main/**/*.d.ts", "src/types/**/*.d.ts", "src/shared/**/*.ts"],
  "exclude": ["src/main/preload.ts"]
}
