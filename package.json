{
  "name": "usb-video-vault",
  "version": "0.1.5",
  "description": "USB Video Vault",
  "author": "Yindo",
  "main": "dist/main/index.js",
  "scripts": {
    "preclean": "node -e \"try{require('child_process').execSync('taskkill /F /IM \\\"USB Video Vault.exe\\\"',{stdio:'ignore'})}catch(e){}\"",
    "prebuild": "node tools/sanitize-package-json.cjs && node tools/guard-module-type.cjs",
    "preversion": "node tools/sanitize-package-json.cjs && node tools/guard-module-type.cjs",
    "prepack": "node tools/sanitize-package-json.cjs && node tools/guard-module-type.cjs",
    "clean": "rimraf dist",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc -p tsconfig.main.json && node scripts/copy-preload.cjs",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "electron:build": "electron-builder --win nsis portable"
  },
  "build": {
    "appId": "com.yindo.usbvideovault",
    "productName": "USB Video Vault",
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.18.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.0.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "mime-types": "^3.0.1",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tweetnacl": "^1.0.3"
  }
}
